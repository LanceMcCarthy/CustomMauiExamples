<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:telerik="http://schemas.telerik.com/2022/xaml/maui"
             NavigationPage.HasNavigationBar="False"
             x:Class="FlyoutExample.Views.SettingsPage">
    <Grid>
        <VerticalStackLayout VerticalOptions="Center"
                             HorizontalOptions="Center"
                             Spacing="10">
            <Label Text="UNDER CONSTRUCTION"
                   FontAttributes="Bold"
                   FontSize="24"
                   HorizontalOptions="Center" />
            <Label Text="Visit the Routes page for a nice demo."
                   HorizontalOptions="Center" />
        </VerticalStackLayout>

        <telerik:RadBusyIndicator IsBusy="{Binding IsBusy}"
                                  IsVisible="{Binding IsBusy}"
                                  BackgroundColor="{StaticResource TranslucentWhite}"
                                  AnimationContentColor="{StaticResource BrandBlue}"
                                  AnimationContentHeightRequest="150"
                                  AnimationContentWidthRequest="150"
                                  AnimationType="Animation6" />
    </Grid>
</ContentPage>
