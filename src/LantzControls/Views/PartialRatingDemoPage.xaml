<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LantzControls.Views.PartialRatingDemoPage"
             xmlns:input="clr-namespace:LantzControls.Input"
             Title="PartialRatingDemoPage">
    <VerticalStackLayout VerticalOptions="Center"
                         Padding="10"
                         Spacing="5">
        <Label Text="Rotten Tomatoes: Top Gun 15"/>

        <input:PartialRating x:Name="RottenTomatoesRating"/>

        <Button Text="Update Rating (random)"
                Clicked="Button_OnClicked"/>
    </VerticalStackLayout>
</ContentPage>