<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:telerik="http://schemas.telerik.com/2022/xaml/maui"
             x:Class="LantzControls.Primitives.LabeledCheckBox">
    <HorizontalStackLayout Spacing="10"
                           Padding="10">
        <telerik:RadCheckBox x:Name="PART_CheckBox"
                             CheckedChanged="PART_CheckBox_CheckedChanged"
                             VerticalOptions="Center"/>
        <Label x:Name="PART_Label" 
               telerik:RadCheckBox.ToggleOnTap="{Reference PART_CheckBox}"
               VerticalOptions="Center"/>
    </HorizontalStackLayout>
</ContentView>
