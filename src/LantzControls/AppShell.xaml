       xmlns:views="clr-namespace:LantzControls.Views"
       Shell.FlyoutBehavior="Flyout"
       Shell.NavBarIsVisible="True">

    <ShellContent Title="Input Controls"
                  ContentTemplate="{DataTemplate views:InputControlsDemoPage}"
                  Route="FloatingLabelDemoPage" />

    <ShellContent Title="DataGrid ColumnChooser Demo"
