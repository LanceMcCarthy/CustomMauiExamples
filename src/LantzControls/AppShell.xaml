                  Route="DataGridColumnChooserDemoPage" />

    <ShellContent Title="AsyncTemplateCell Demo"
                  ContentTemplate="{DataTemplate views:AsyncTemplateCellDemoPage}"
                  Route="AsyncTemplateCellDemoPage" />

    <ShellContent Title="SelectAllComboBox Demo"
