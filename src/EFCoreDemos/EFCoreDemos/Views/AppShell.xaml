<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="EFCoreDemos.Views.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:EFCoreDemos"
    xmlns:views="clr-namespace:EFCoreDemos.Views"
    Shell.FlyoutBehavior="Flyout"
    Shell.FlyoutIsPresented="True"
    Title="EFCoreDemos">

    <ShellContent
        Title="EFCore Filtering"
        ContentTemplate="{DataTemplate views:FilteringPage}"
        Route="FilteringPage" />

    <ShellContent
        Title="EFCore Sorting"
        ContentTemplate="{DataTemplate views:SortingPage}"
        Route="SortingPage" />

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate views:MainPage}"
        Route="MainPage" />

</Shell>
